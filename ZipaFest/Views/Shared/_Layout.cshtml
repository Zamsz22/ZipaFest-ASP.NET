<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ZipaFest</title>

  
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AboutUs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/category.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Rewards.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script type="module" src="https://unpkg.com/%40splinetool/viewer@1.10.52/build/spline-viewer.js"></script>
</head>
<body>

    <!-- ========================= HEADER ========================= -->
    <header>
       
        <a asp-controller="Home" asp-action="Index" class="header-logo"><img src="~/img/Logo/Negativo.svg" alt="ZipaFest Logo"></a>

        <button class="menu-toggle" id="menuToggle" aria-label="Abrir menú">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <ul class="nav-links" id="navLinks">
            <li class="category" id="categoryMenu">
                <a href="#categories" class="categoryName">
                    CATEGORIAS
                    <span class="material-icons dropdown-icon">
                        expand_more
                    </span>
                </a>
                <ul class="drop-down">
                    
                    <li><a asp-controller="Home" asp-action="Burger">BURGER FEST</a></li>
                    <li><a asp-controller="Home" asp-action="Cake">TORTA FEST</a></li>
                    <li><a asp-controller="Home" asp-action="Pizza">PIZZA FEST</a></li>
                    <li><a asp-controller="Home" asp-action="Empanada">EMPANADA FEST</a></li>
                    <li><a asp-controller="Home" asp-action="Coffee">COFFEE MASTER</a></li>
                </ul>
            </li>
            <li> <a asp-controller="Home" asp-action="Rewards">CUPONES</a></li>
            <li> <a asp-controller="Home" asp-action="AboutUs">SOBRE NOSOTROS</a></li>
            <div class="header-right">
                <a asp-controller="Home" asp-action="Contact" class="contact-link">CONTACTANOS</a>
               
                <a href="#" class="login-button">INGRESAR</a>
            </div>
        </ul>

        <div class="nav-overlay" id="navOverlay"></div>
    </header>
    <!-- ======================= END HEADER ======================= -->

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- ========================= FOOTER ========================= -->
    <footer class="main-footer">
        <div class="footer-container">
            <div class="footer-column-left">
                <div class="logo-group">
                   
                    <img src="~/img/Logo/Horizontal_Positivo.svg" alt="Escudo Alcaldía de Zipaquirá" class="footer-logo">
                </div>
                <div class="contact-info">
                    <h4>Punto de Información Turística</h4>
                    <p>Calle: 4 N° 11-01</p>
                    <p>Sábados, domingos y festivos</p>
                    <p>10:00 a.m. a 2:00 p.m.</p>
                    <p class="copyright">Copyright © 2025</p>
                </div>
            </div>
            <div class="footer-column-center">
                <div class="divider"></div>
                <nav class="footer-nav">
                    <ul class="nav-links-footer">
                       
                        <li><a asp-controller="Home" asp-action="Rewards">CUPONES</a></li>
                        <li><a href="#categories">CATEGORÍAS</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">SOBRE NOSOTROS</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">CONTÁCTANOS</a></li>
                    </ul>
                </nav>
            </div>
            <div class="footer-column-right">
               
                <img src="~/img/Logo/Negativo.svg" alt="Logo de Alcaldía de Zipaquirá" class="alcaldia-logo-big">
                <div class="divider"></div>
            </div>
        </div>
    </footer>
    <!-- ======================= END FOOTER ======================= -->
    
    <script src="~/js/script.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>