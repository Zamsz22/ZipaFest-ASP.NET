@{
    ViewData["Title"] = "Burger Fest";
    Layout = "_Layout";
}

<main>
    <!-- NOTA: Si estas rejillas de fondo no aparecen, asegúrate de que las rutas 'url()' en tu archivo CSS también estén corregidas a '../img/...' -->
    <div class="bg-grid"></div>
    <section class="fest-content-paper">

        <section class="intro-section">
            <div class="intro-container">
                <div class="intro-text">
                    <h1>BURGER<p>FEST</p></h1>
                    <p>
                        El Burger Fest es un evento culinario que celebra la diversidad y creatividad en el mundo de las hamburguesas.
                        Durante este festival, los amantes de las hamburguesas pueden disfrutar de una amplia variedad de opciones gastronómicas,
                        desde las clásicas hasta las más innovadoras y gourmet.
                        Restaurantes y food trucks participan ofreciendo sus mejores creaciones, muchas veces con ingredientes locales y recetas únicas.
                    </p>
                </div>
            </div>
        </section>
        <!-- ======================= WINNERS SECTION ======================= -->
        <section class="winners-section">


            <div class="winners-container">

                <h2 class="section-title-winners">Ganadores del Burger Fest</h2>
                <div class="winners-flex">

                    <!-- GANADOR 1 -->
                    <div class="winner-card">
                        <div class="winner-content">
                            <span class="winner-category">GANADOR 2023</span>
                            <h3 class="winner-plate-name">Hamburguesa Suprema</h3>
                            <p class="winner-description">
                                La estrella es nuestra jugosa carne angus, cubierta con cremosa salsa de chipotle, acompañada de panceta dorada, queso cheddar derretido y coronada con pepinillos frescos
                            </p>
                        </div>
                        <div class="winner-image">
                            <!-- CORRECCIÓN: Se ajustó la ruta de la imagen -->
                            <img src="~/img/Fest/recursos_festivales/Recurso 13burguer2.png" alt="Hamburguesa Suprema Ganadora 2023">
                        </div>
                    </div>

                    <!-- GANADOR 2 -->
                    <div class="winner-card">
                        <div class="winner-content">
                            <span class="winner-category">GANADOR 2024</span>
                            <h3 class="winner-plate-name">Gourmet Deluxe</h3>
                            <p class="winner-description">
                                La protagonista es nuestra carne premium, bañada en una intensa salsa BBQ ahumada, acompañada de tocino crujiente, queso suizo fundido y coronada con aros de cebolla que le dan el toque crunchy.
                            </p>
                        </div>
                        <div class="winner-image">
                            <!-- CORRECCIÓN: Se ajustó la ruta de la imagen -->
                            <img src="~/img/Fest/recursos_festivales/Recurso 12burguer.png" alt="Gourmet Deluxe Ganadora 2024">
                        </div>
                    </div>

                </div>

            </div>
        </section>

    </section>
    <div class="bg-grid-2"></div>
    <!-- ===================== END WINNERS SECTION ===================== -->
    <section class="participants-section">

        <div class="participants-container">
            <h2 class="section-title-participants">Participantes del <br> Burger Fest</h2>
            <div class="participants-grid">
                <div class="participant-card item-one">
                    <h3>La Oveja y el Lobo</h3>
                    <p>Deliciosas hamburguesas gourmet con ingredientes frescos y salsas caseras.</p>
                    <!-- CORRECCIÓN: Se ajustó la ruta de la imagen -->
                    <img src="~/img/Fest/participantes_fotos/participantes_fotos/burguer_01.png" alt="Burger Place 1">
                </div>

                <div class="participant-card item-second">

                    <h3>Sabana Burger</h3>
                    <p>Hamburguesas clásicas y creativas, perfectas para todos los gustos.</p>
                    <!-- CORRECCIÓN: Se ajustó la ruta de la imagen -->
                    <img src="~/img/Fest/participantes_fotos/participantes_fotos/burguer_02.png" alt="Burger Place 2">
                </div>
                <div class="participant-card item-third">

                    <h3>La Estación</h3>
                    <p>Especializados en hamburguesas vegetarianas y veganas con mucho sabor.</p>
                    <!-- CORRECCIÓN: Se ajustó la ruta de la imagen -->
                    <img src="~/img/Fest/participantes_fotos/participantes_fotos/burguer_03.png" alt="Burger Place 3">
                </div>
            </div>
        </div>

    </section>

    <!-- =================== END CATEGORIES SECTION =================== -->
</main>